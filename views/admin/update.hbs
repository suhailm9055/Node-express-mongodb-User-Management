<div class="row">
  <div class="col-md-6 m-auto">
    <div class="container" style="padding-top: 15%;">
      <h2 class="text-primary text-center">Edit User</h2>
      <form
        action="/admin/updateuser/{{userData._id}}"
        id="updateuser"
        method="post"
      >

        <div class="form-group">
          <label class="text-primary">Enter username</label>
          <input
            type="text"
            class="form-control"
            name="UserName"
            value="{{userData.UserName}}"
            placeholder="Enter username"
          />
        </div>
<div class="form-group">
          <label class="text-primary">Enter Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            value="{{userData.email}}"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label class="text-primary">Enter Password</label>
          <input
            type="text"
            class="form-control"
            name="pw"
            value="{{userData.pw}}"
            placeholder="Enter password"
          />
        </div>
        

        
                    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal1">
  Update
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">UnBlock user</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       Do you want to update {{userData.UserName}}
      </div>
      <div class="modal-footer">
       <a href="/admin/users"></a> <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button></a>
        <button type="submit" class="btn btn-primary">Update</button>
      </div>
    </div>
  </div>
</div>
      </form>
    </div>
  </div>
</div>