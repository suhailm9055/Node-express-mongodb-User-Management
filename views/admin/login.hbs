<div>
<div class="py-5 imgdiv " style="height: 100vh;">
  <div class="container">
    <div class="row">
      <div class="col-11 col-sm-11 col-md-7 col-lg-5 m-auto ">
        <form
        id="contact-form"
          action="/admin/adminsubmit"
          method="post"
          role="form"
          enctype="application/x-www-form-urlencoded"
        >
          {{#if adminlogout}}
          
            <div class="alert alert-success alert-dismissible fade show" role="alert">
   You Have Logged Out <strong>Successfully</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
          {{/if}}
          {{#if adminLoginErr}}
              <div class="alert alert-danger alert-dismissible fade show" role="alert">
   Username or Password is <strong>Invalid</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
          {{/if}}
          <legend class="primary text-primary my-4">Please Log with Admin Details</legend>

          <div class="form-group my-4">
            <label class="text-white" for="first_name">Username</label>
            <input
              type="text"
              class="form-control"
              name="adminName"
              id="first_name"
              placeholder="First Name"
              
            />
          </div>

          <div class="form-group my-4">
            <label class="text-white" for="pw">Password</label>
            <input
              type="password"
              class="form-control"
              name="adminPw"
              id="pw"
             
            />
          </div>
          

          <button type="submit" class="btn btn-primary my-4">Admin Log In</button>

        </form>

      </div>
    </div>
  </div>
</div>